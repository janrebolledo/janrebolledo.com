---
import { Image } from "@astrojs/image/components";
const { media } = Astro.props;
---

{
  media && media.fields.file.contentType.includes("image") && (
    <Image
      src={"https:" + media.fields.file.url}
      alt={media.fields.title}
      class="object-cover w-full h-full"
      width={1920}
      height={1080}
      format={media.fields.file.contentType.replace("image/", "")}
      loading={"eager"}
      quality={80}
    />
  )
}
{
  media && media.fields.file.contentType.includes("video") && (
    <video class="object-cover w-full h-full" muted loop playsinline>
      <source
        src={"https:" + media.fields.file.url}
        type={media.fields.file.contentType}
      />
    </video>
  )
}
